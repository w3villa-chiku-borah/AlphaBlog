<%= render 'shared/error', obj: @article %>



<div class="background-color-blue">
<%= form_with(model: @article, local: true)  do |form| %>
<div class="form-group row">
<strong><%= form.label :title, class: "col-2 col-form-lable" %> </strong>
<br>
<%# <%= form.text_field :title %> 
<div class="col-10"><%= form.text_field :title, class: "form-control"%> </div>
</div>
<div class="form-group row">
<strong><%= form.label :description, class: "col-2 col-form-lable" %> </strong>
<br>
<%# <%= form.text_field :title %> 
<div class="col-10"><%= form.text_area :description,rows: 10, class: "form-control"%> </div>
</div>

<div class="display-flex">
<div class="form-group row ">
<%= form.submit class: "btn btn-success btn-lg" %>

</div>
</div>
<% end %>
</div>
 