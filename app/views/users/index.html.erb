<h1 class="text-center mt-4">Alpha bloggers</h1>
<div class="flex-directtion-wrap">
<% @users.each do |user| %>

<div class="withd-div card text-center mt-4  shadow p-3 mb-5 bg-white rounded">
  <div class="card-header font-italic">
 <%= link_to user.username, user_path(user) %>
  </div>
  <div class="card-body">

    <h5 class="card-title"><%= link_to gravatar_for(user, size: 150), user %></h5>
    <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
    <div class="display-flex">
  <%= link_to "view profile", user,class: "btn btn-outline-primary mr-4" %>
  <%= link_to "Edit profile", edit_user_path(user),class: "btn btn-outline-success mr-4" %>
  </div>
  </div>
  <div class="card-footer text-muted">
    <small>join <%= time_ago_in_words(user.created_at) %>,
    edited <%= time_ago_in_words(user.updated_at) %> ago </small>
  </div>
</div>


        <% end %>
</div>

<div class="flickr_pagination ">
<%= will_paginate @users %>
  </div>

